<Window x:Class="KinectMultiTrack.UI.KinectStreamUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KinectViewer"
        Height="600" Width="700">
    <Window.Resources>
        <SolidColorBrush x:Key="MediumGreyBrush" Color="#ff6e6e6e" />
        <SolidColorBrush x:Key="KinectPurpleBrush" Color="#ff52318f" />
        <SolidColorBrush x:Key="KinectBlueBrush" Color="#ff00BCF2" />
    </Window.Resources>

    <Grid Margin="10 10 10 10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label x:Name="Label" Grid.Row="0" Content="Kinect Stream" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="-0.079,0.5" Margin="10,10,542,0" FontWeight="Bold" FontSize="16" FontFamily="Microsoft Sans Serif" Width="120"/>

        <Label x:Name="ClientIPLabel" Grid.Row="0" Content="Client IP" HorizontalAlignment="Left" Margin="195,12,0,0" FontSize="14" FontFamily="Microsoft Sans Serif" RenderTransformOrigin="0.499,0.123" FontWeight="Bold"/>

        <Viewbox Grid.Row="1" HorizontalAlignment="Center">
            <Image Source="{Binding BodyStreamImageSource}" Stretch="UniformToFill" />
        </Viewbox>
    </Grid>
</Window>

